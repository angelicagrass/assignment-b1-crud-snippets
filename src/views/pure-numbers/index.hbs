<h1>
    <span class="far fa-list-alt"></span>Pure Numbers
</h1>

<table class="table table-hover">
  <caption>List of pure numbers</caption>
  <thead class="thead-light">
    <tr>
      <th scope="col">Created</th>
      <th scope="col">Value</th>
    </tr>
  </thead>
  <tbody>
    {{#if viewData.pureNumbers.length}}
    {{#each viewData.pureNumbers}}
    <div class="snippetbox">
      <div id="mysnippetheader">User: FejkName</div>
      <p>{{this.value}}</p>
    </div>
    <tr>
      <th scope="row">{{this.createdAt}}</th>
      <td>{{this.value}}</td>
    </tr>
    {{/each}}
    {{else}}
    <tr colspan="2">
      <td class="text-center">No pure numbers to display.</td>
    </tr>
  {{/if}}
  </tbody>
</table>
