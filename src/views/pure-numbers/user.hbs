{{!-- Login form bootstrap --}}

<div class="login-form">
    <form action="./loginPost" method="post">
        <h2 class="text-center">Log in</h2>       
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" id="user" name="user" value="{{value}}" required>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" id="pass" name="pass" value="{{value}}" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info btn-block">Log in</button>
        </div>
        <div class="clearfix">
        </div>        
    </form>
    <p class="text-center"><a href="./createnewuser" class="text-info">Create an Account</a></p>
</div>